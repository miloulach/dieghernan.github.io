---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:media="http://search.yahoo.com/mrss/">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}</link>
    <atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
    <category>blog</category>
    <copyright>(c)  {{ site.time | date: '%Y' }}, {{ site.author.name }}</copyright>
    <generator>https://rubygems.org/gems/jekyll-sitemap</generator>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>
    <image>
      <link>{{ site.url }}</link>
      <title>{{ site.title | xml_escape }}</title>
      <url>{{ site.url }}{{ site.avatar }}</url>
      <description>{{ site.description | xml_escape }}</description>
    </image>
    {% for post in site.posts limit:20 %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <description>
          {% if post.subtitle %}{{ post.subtitle | xml_escape }} - {% endif %}
          {{ post.content | strip_html | xml_escape | truncatewords: 50 }}
        </description>
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <link>{{ site.url }}{{ post.url }}</link>
        {% if post.tags.size > 0 %}
        <category>{{ post.tags | join: "/" }}</category>
        {% endif %}
        <guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
        <media:content url="{{ post.share-img }}" medium="image" width="485" height="321"/>
        <media:thumbnail url="{{ post.share-img }}"  width="150" height="99"/>
      </item>
    {% endfor %}
  </channel>
</rss>
